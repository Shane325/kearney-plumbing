<div class="section section-border-top flv_sections_21">
    <div class="section_wrapper clearfix">
        <div class="items_group clearfix margin-top-50 margin-bottom-50">
            <!-- One Third (1/3) Column -->
            <div class="column one-third column_column">
                <div class="column_attr ">
                    <div class="flv_style_11">
                        <h2>Write a message</h2>
                        <p>
                            <span class="big">If you have any questions, please do not hesitate to send us a message.
                                We
                                reply within <span class="tooltip" data-tooltip="Mon-Fri 8:00am-6:00pm (GMT +1)">24
                                    hours</span> !</span>
                        </p>
                        <p class="flv_style_11">
                            <span class="big">Our profiles on social media:</span>
                        </p>
                    </div>
                    <div class="flv_style_12 text-align-right">
                        <a href="<%= common.social.facebook %>" class="icon_bar icon_bar_facebook icon_bar_small"
                            target="_blank"><span class="t"><i class="icon-facebook"></i></span><span class="b"><i
                                    class="icon-facebook"></i></span></a>

                        <a href="<%= common.social.instagram %>" class="icon_bar icon_bar_instagram icon_bar_small"
                            target="_blank"><span class="t"><i class="icon-instagram"></i></span><span class="b"><i
                                    class="icon-instagram"></i></span></a>
                    </div>
                </div>
            </div>
            <!-- Two Third (2/3) Column -->
            <div class="column two-third column_column">
                <div class="column_attr ">
                    <div id="contactWrapper">
                        <form id="kp-contactform" action="/contact/send-email" method="post">
                            <!-- One Third (1/3) Column -->
                            <div class="column one-third">
                                <label>Name:</label><span>
                                    <input type="text" name="name" id="name" size="40" aria-required="true"
                                        aria-invalid="false" />
                                </span>
                            </div>
                            <!-- One Third (1/3) Column -->
                            <div class="column one-third">
                                <label>E-mail address:</label><span>
                                    <input type="email" name="email" id="email" size="40" aria-required="true"
                                        aria-invalid="false" />
                                </span>
                            </div>
                            <!-- One Third (1/3) Column -->
                            <div class="column one-third">
                                <label>Subject:</label><span>
                                    <input type="text" name="subject" id="subject" size="40" aria-invalid="false" />
                                </span>
                            </div>
                            <div class="column one">
                                <label>Message:</label><span> <textarea name="body" id="body" class="flv_style_38" rows="10"
                                        aria-invalid="false"></textarea></span>
                            </div>
                            <div class="column one">
                                <input type="submit" value="Send Message" id="submit" onClick="return check_values();">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
